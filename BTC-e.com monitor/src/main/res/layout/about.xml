<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:src="@drawable/ic_launcher" android:paddingTop="10dp"
            android:layout_below="@+id/textView" android:layout_centerInParent="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BTC-e.com Trader Client"
            android:id="@+id/textView"
            android:paddingTop="10dp" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="r107"
            android:id="@+id/textView1"
            android:layout_below="@+id/textView2" android:layout_centerHorizontal="true" android:paddingBottom="10dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Z-Lab - 2013"
            android:id="@+id/textView2"
            android:layout_centerHorizontal="true" android:layout_below="@+id/imageView" android:paddingTop="10dp"/>
</RelativeLayout>